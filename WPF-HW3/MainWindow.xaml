        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Margin="2,0,2,0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
