        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
            Text="Speed: 0 chars/min" FontSize="15"/>
        <TextBlock Grid.Row="0" Grid.Column="1"
            Text="Fails: 0" FontSize="15"/>
        <StackPanel Grid.Row="0" Grid.Column="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Difficult: 5" FontSize="15"/>
                <Slider Minimum="0" Maximum="5" Margin="5,2,2,2" Width="100"/>
            </StackPanel>
            <Button Content="Start" Margin="2" FontSize="15"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="3">
            <StackPanel Orientation="Horizontal">
                <CheckBox Margin="5,1,2,2">
                    <TextBlock FontSize="15">Case Sensitive</TextBlock>
                </CheckBox>
            </StackPanel>
            <Button Content="Stop" Margin="2" FontSize="15" IsEnabled="False"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Grid.ColumnSpan="4" 
                   Background="Aqua" Margin="2,5,2,5"/>

