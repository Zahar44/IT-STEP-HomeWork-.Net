<UserControl x:Class="WPF_HW5.ColorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_HW5"
             mc:Ignorable="d">
    <DockPanel>
        <TextBlock Text="#AA484848" MaxWidth="80"
                   Margin="5" x:Name="ColorHashTextBlock"
                   VerticalAlignment="Center"/>
        <Rectangle MinWidth="50" MinHeight="20"
                   Margin="5" x:Name="ColorRectangle"
                   VerticalAlignment="Center"/>
        <Button Content="Delete" Margin="5"
                x:Name="DeleteButton"
                VerticalAlignment="Center"/>
    </DockPanel>
</UserControl>
